{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node20",
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
