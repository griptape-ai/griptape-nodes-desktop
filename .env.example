# OAuth Configuration
# AUTH_SCHEME controls the OAuth callback redirect URI:
# - "http": Uses http://localhost:5173/ (temporary workaround for dev and prod)
# - "custom": Uses gtn://auth/callback (will be used for both dev and production once custom URL scheme is added to Auth0 config)
# Default is "http" until the custom URL scheme is properly configured in Auth0
AUTH_SCHEME=http

# =============================================================================
# Fake Update Manager Configuration (Development Only)
# =============================================================================
# These settings control the FakeUpdateManager used in development mode to
# simulate update behavior without requiring a real update server.

# Whether an update is available (true/false)
# Default: true
FAKE_UPDATE_AVAILABLE=true

# The version to report as available for update
# Default: 99.0.0-fake
FAKE_UPDATE_VERSION=99.0.0-fake

# The current version to report as installed
# Default: 0.0.0-dev
FAKE_UPDATE_CURRENT_VERSION=0.0.0-dev

# How long the download simulation takes in milliseconds
# Default: 2000
FAKE_UPDATE_DOWNLOAD_TIME_MS=20000

# Simulate an update check failure (true/false)
# Default: false
FAKE_UPDATE_FAIL_CHECK=false

# Simulate a download failure (true/false)
# Default: false
FAKE_UPDATE_FAIL_DOWNLOAD=false

# The package ID to report
# Default: griptape-nodes-desktop
FAKE_UPDATE_PACKAGE_ID=griptape-nodes-desktop

# Override the "Download updates automatically" setting in dev mode (true/false)
# When set, this overrides the user's setting from the UI
# Useful for testing both auto-download and manual download flows
# If not set, uses the value from settings
FAKE_ENABLE_AUTO_DOWNLOAD_UPDATE=true
